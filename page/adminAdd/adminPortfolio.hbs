<div class="continer">
    <div class="row">
        <div class="col-lg-12">
            <form action="/admin/portfolio/add" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Rasm</label>
      <input
        type="file"
        name="rasm"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
       
      />
      <input
        type="hidden"
        name="oldImg"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
       
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail2" class="form-label">Parda nomi</label>
      <input
        type="text"
        name="pardaNomi"
        class="form-control"
        id="exampleInputEmail2"
        aria-describedby="emailHelp"
        required
      />
    </div>
    <div class="mb-3">
          <select name="mentor" id="">
            <option disabled selected>Mentorni tanlang</option>
            {{#each portfolioMenu}}
              <option value="{{_id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
    <input type="hidden" value="{{portfolio._id}}" name="id" />
    <input type="submit" value="Saqlash" class="btn btn-primary"/>
      </form>
        </div>
    </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12 shadow rounded p-4 mb-4">
      <table class="table table-striped">
        <thead>
          <th>#</th>
          <th>Rasm</th>
          <th>Parda Nomi</th>
          <th>Tahrirlash</th>
        </thead>
        <tbody>
          {{#if portfolio.length}}
            {{#each portfolio}}
              <tr>
                <td>{{incr @index}}</td>
                <td>{{rasm}}</td>
                <td>{{{pardaNomi}}}</td>
                <td>
                  <a
                    class="btn btn-primary"
                    href="/admin/portfolio/{{id}}">Tahrirlash</a>
                </td>
              </tr>
            {{/each}}
          {{else}}
            Malumot qo'shilamagan
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>