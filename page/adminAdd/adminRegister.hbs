<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto shadow rouded p-4">
            <h2>Foydalanuvchi qo'shish</h2>
            {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}
             {{#if success}}
                <div class="alert alert-success">{{success}}</div>
            {{/if}}
            <form action="/admin/register/add" method="POST">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Login</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Login"
                        name="login" required />
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Parol</label>
                    <input type="password" class="form-control" id="exampleFormControlTextarea1" placeholder="Parol"
                        name="parol"  required ></input>
                </div>
                <button class="btn btn-primary">Saqlash</button>
            </form>
        </div>
    </div>
</div>

<div class="container my-4" >
    <div class="row">
        <div class="col-lg-12 my-4">
            <table class="table">
                <thead>
                    <th>â„–</th>
                    <th>login</th>
                    <th>parol</th>
                    <th>Tahrirlash</th>
                </thead>
                <tbody>
                    {{#if user.length}}
                {{#each user}}
                <tr>
                    <td>
                        {{incr @index}}
                    </td>
                    <td>
                        {{login}}
                    </td>
                    <td>
                        {{parol}}
                    </td>
                  <td>
                    <a href="/admin/register/{{id}}"class="btn btn-primary">Tahrirlash</a>
                  </td>
                </tr>
                  {{/each}}
                    {{else}}
                <span>Foydalanuvchi qo'shilmagan</span>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    const error = document.querySelectorAll('.alert')

    error.forEach((item)=>{
        setTimeout(()=>{
            item.style.display = 'none'
        },2000)
    })
</script>