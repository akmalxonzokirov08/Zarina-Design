<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-auto shadow rouded p-4">
      {{#if services}}
        <form action="/admin/services/edit" method="POST">
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Ikonka</label>
            <input
              value="{{services.ikonka}}"
              type="text"
              name="ikonka"
              class="form-control"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
              required
            />
          </div>
          {{!-- <div class="mb-3">
            <label for="exampleInputEmail4" class="form-label">Rang</label>
            <input
              type="color"
              name="rang"
              class="form-control"
              id="exampleInputEmail4"
              aria-describedby="emailHelp"
              required
            />
          </div> --}}
          <div class="mb-3">
            <label for="exampleInputEmail2" class="form-label">Xizmat turi</label>
            <input
              value="{{services.xizmatTuri}}"
              type="text"
              name="xizmatTuri"
              class="form-control"
              id="exampleInputEmail2"
              aria-describedby="emailHelp"
              required
            />
          </div>
          <div class="mb-3">
            <label for="summernote" class="form-label">Malumot</label>
            <textarea
              name="malumot"
              type="text"
              class="form-control"
              id="summernote"
              aria-describedby="emailHelp"
              required
            >
              {{{services.malumot}}}
            </textarea>
          </div>

          <input type="hidden" value="{{services._id}}" name="id" />
          <input
            type="submit"
            name="Saqlash"
            value="Saqlash"
            class="btn btn-primary"
          />
        </form>
        <form action="/admin/services/delete" method="POST">
          <input type="hidden" name="id" value="{{services.id}}" />
          <button type="submit" class="btn btn-danger my-4">O'chirish</button>
        </form>
      {{/if}}
    </div>
  </div>
</div>
