<form action="/admin/team/add"method="POST" class="shadow rounded p-4 mb-4" enctype="multipart/form-data">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Rasm</label>
    <input
      type="file"
      name="rasm"
      class="form-control"
      id="exampleInputEmail1"
      aria-describedby="emailHelp"
      required
    />
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail3" class="form-label">Ism Familya</label>
    <input
      type="text"
      name="ism"
      class="form-control"
      id="exampleInputEmail3"
      aria-describedby="emailHelp"
      required
    />
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail2" class="form-label">Kasbi</label>
    <input
      type="text"
      name="kasbi"
      class="form-control"
      id="exampleInputEmail2"
      aria-describedby="emailHelp"
      required
    />
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail2" class="form-label">Izoh</label>
    <input
      type="text"
      name="izoh"
      class="form-control"
      id="exampleInputEmail2"
      aria-describedby="emailHelp"
      required
    />
  </div>
  <input type="submit" value="Saqlash" class="btn btn-primary" />
</form>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">â„–</th>
            <th scope="col">Rasm</th>
            <th scope="col">Ism Familya</th>
            <th scope="col">Kasbi</th>
            <th scope="col">Izoh</th>
            <th scope="col">Tahrirlash</th>
          </tr>
        </thead>
        <tbody>
          {{#if team.length}}
            {{#each team}}
              <tr>
                <td>{{incr @index}}</td>
                <td>{{rasm}}</td>
                <td>{{ism}}</td>
                <td>{{kasbi}}</td>
                <td>{{izoh}}</td>
                <td>
                  <a
                    class="btn btn-primary"
                    href="/admin/team/{{id}}"
                  >Tahrirlash</a>
                </td>
              </tr>
            {{/each}}
          {{else}}
            Malumot qo'shilmagan
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>